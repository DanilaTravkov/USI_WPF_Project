<Window x:Class="WPFTutorial.View.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTutorial.View"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="400">
    <Grid>
        <Label Content="Name" Margin="25" VerticalAlignment="Top" HorizontalAlignment="left"></Label>
        <TextBox Text="{Binding Name}" Height="30" Width="200" Margin="25, 50" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" BorderBrush="Orange"/>

        <Label Content="Email" Margin="25, 100" VerticalAlignment="Top" HorizontalAlignment="left"></Label>
        <TextBox Text="{Binding Email}" Height="30" Width="200" Margin="25, 125" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" BorderBrush="Orange"/>

        <!-- In Butoons instead of events we use Command attributes -->
        <Button Command="{Binding AddUserCommand}" Height="30" Width="70" Content="+ Add" VerticalContentAlignment="Center" Padding="5" HorizontalAlignment="Left" Margin="25"/>
    </Grid>
</Window>
